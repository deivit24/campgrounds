<% include ../partials/header %>
<div class="container">
  <h1 style="text-align: center; margin-top: 25px;">Add New Comment to <%= campground.name %></h1>

  <div style="width: 320px; margin: 25px auto;">
    <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
      
      
		<div class="form-group">
			<textarea class="form-control" name="comment[text]" placeholder="Enter Comment" rows="3"></textarea>
     
      </div>
	 	
      <div class="form-group">
        <button class="btn btn-info btn-lg btn-block">Submit</button>
      </div>
    </form>
    <a href="/campgrounds"> go back</a>
  </div>
</div>
